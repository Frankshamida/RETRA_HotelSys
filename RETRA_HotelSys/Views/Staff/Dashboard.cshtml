@model dynamic
@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";

    var roleName = ViewBag.RoleName as string ?? "Staff";
}

<div class="dashboard-cards">
    @if (roleName == "Frontdesk")
    {
        <!-- Frontdesk Dashboard Cards -->
        <div class="dashboard-card">
            <div class="card-icon frontdesk">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="card-title">Today's Check-Ins</div>
            <div class="card-value">12</div>
            <div class="card-footer">
                <span><i class="fas fa-arrow-up text-success"></i> 2 from yesterday</span>
                <a href="#">View All</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon frontdesk">
                <i class="fas fa-calendar-times"></i>
            </div>
            <div class="card-title">Today's Check-Outs</div>
            <div class="card-value">8</div>
            <div class="card-footer">
                <span><i class="fas fa-arrow-down text-danger"></i> 1 from yesterday</span>
                <a href="#">View All</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon frontdesk">
                <i class="fas fa-bed"></i>
            </div>
            <div class="card-title">Occupied Rooms</div>
            <div class="card-value">42/60</div>
            <div class="card-footer">
                <span>70% occupancy</span>
                <a href="#">Room Status</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon frontdesk">
                <i class="fas fa-user-clock"></i>
            </div>
            <div class="card-title">Pending Reservations</div>
            <div class="card-value">5</div>
            <div class="card-footer">
                <span>Require attention</span>
                <a href="#">Process Now</a>
            </div>
        </div>
    }
    else if (roleName == "Housekeeping")
    {
        <!-- Housekeeping Dashboard Cards -->
        <div class="dashboard-card">
            <div class="card-icon housekeeping">
                <i class="fas fa-broom"></i>
            </div>
            <div class="card-title">Rooms to Clean</div>
            <div class="card-value">15</div>
            <div class="card-footer">
                <span>5 priority rooms</span>
                <a href="#">View Tasks</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon housekeeping">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="card-title">Completed Today</div>
            <div class="card-value">22</div>
            <div class="card-footer">
                <span>85% of schedule</span>
                <a href="#">View All</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon housekeeping">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="card-title">Maintenance Issues</div>
            <div class="card-value">3</div>
            <div class="card-footer">
                <span>Require attention</span>
                <a href="#">Report Now</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon housekeeping">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="card-title">Low Inventory</div>
            <div class="card-value">4 items</div>
            <div class="card-footer">
                <span>Need restocking</span>
                <a href="#">View Inventory</a>
            </div>
        </div>
    }
</div>

<div class="recent-activity">
    <h2>Recent Activity</h2>
    <div class="activity-item">
        <div class="activity-icon">
            <i class="fas fa-bell"></i>
        </div>
        <div class="activity-content">
            <div class="activity-title">System updated to version 2.1.3</div>
            <div class="activity-time">Today, 08:45 AM</div>
        </div>
    </div>
    <div class="activity-item">
        <div class="activity-icon">
            <i class="fas @(roleName == "Frontdesk" ? "fa-user-check" : "fa-broom")"></i>
        </div>
        <div class="activity-content">
            <div class="activity-title">
                @(roleName == "Frontdesk" ? "New reservation #4587 created" : "Room 205 marked as cleaned")
            </div>
            <div class="activity-time">Today, 10:30 AM</div>
        </div>
    </div>
    <div class="activity-item">
        <div class="activity-icon">
            <i class="fas @(roleName == "Frontdesk" ? "fa-key" : "fa-tools")"></i>
        </div>
        <div class="activity-content">
            <div class="activity-title">
                @(roleName == "Frontdesk" ? "Guest checked in to Room 305" : "Maintenance request for Room 412")
            </div>
            <div class="activity-time">Yesterday, 3:15 PM</div>
        </div>
    </div>
    <div class="activity-item">
        <div class="activity-icon">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="activity-content">
            <div class="activity-title">Password changed successfully</div>
            <div class="activity-time">Yesterday, 11:20 AM</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // You can add dashboard-specific scripts here
        $(document).ready(function () {
            // Example: Animate cards on load
            $('.dashboard-card').each(function (i) {
                $(this).delay(i * 100).animate({ opacity: 1 }, 300);
            });
        });
    </script>
}