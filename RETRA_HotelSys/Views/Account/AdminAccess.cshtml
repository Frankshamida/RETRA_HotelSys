@model AdminAccessCodeViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Admin Portal Access</h4>
            </div>
            <div class="card-body">
                <form asp-action="AdminAccess" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ReturnUrl" value="/Admin/Dashboard" />

                    <div class="form-group">
                        <label asp-for="AccessCode" class="control-label"></label>
                        <input asp-for="AccessCode" class="form-control" placeholder="Enter 6-digit code" />
                        <span asp-validation-for="AccessCode" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary w-100">Verify Access Code</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>