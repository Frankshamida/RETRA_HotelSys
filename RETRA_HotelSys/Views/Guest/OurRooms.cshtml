@model IEnumerable<RETRA_HotelSys.Data.RoomCategories>
@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
    ViewData["Title"] = "Our Rooms";
}

<div class="rooms-container">
    <!-- Hero Section -->
    <div class="rooms-hero">
        <div class="hero-content">
            <h1>Our Luxurious Rooms</h1>
            <p>Experience unparalleled comfort in our carefully designed accommodations</p>
        </div>
    </div>

    <!-- Room Filter -->
    <div class="room-filter">
        <div class="filter-container">
            <div class="filter-option active" data-filter="all">All Rooms</div>
            @foreach (var category in Model.Select(rc => rc.TypeName).Distinct())
            {
                <div class="filter-option" data-filter="@category.ToLower().Replace(" ", "-")">@category</div>
            }
        </div>
    </div>

    <!-- Rooms Grid -->
    <div class="rooms-grid">
        @foreach (var room in Model)
        {
            <div class="room-card" data-category="@room.TypeName.ToLower().Replace(" ", "-")">
                <div class="room-image">
                    @if (!string.IsNullOrEmpty(room.MainImagePath))
                    {
                        <img src="@Url.Content(room.MainImagePath)" alt="@room.TypeName">
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/rooms/default-room.jpg")" alt="@room.TypeName">
                    }
                    <div class="room-badge">@room.MaxCapacity Guests</div>
                    <div class="room-type-badge">@room.TypeName</div>
                </div>
                <div class="room-content">
                    <h3>@room.TypeName</h3>
                    <div class="room-price">₱@room.BasePrice<span>/night</span></div>
                    <p class="room-description">@room.Description</p>

                    <div class="room-features">
                        <h4>Features</h4>
                        <ul>
                            @foreach (var feature in room.RoomTypeFeatures.Take(4))
                            {
                                <li><i class="@feature.RoomFeature.IconClass"></i> @feature.RoomFeature.Name</li>
                            }
                            @if (room.RoomTypeFeatures.Count > 4)
                            {
                                <li class="more-features">+ @(room.RoomTypeFeatures.Count - 4) more</li>
                            }
                        </ul>
                    </div>

                    <div class="room-meta">
                        @if (room.SizeInSqFt.HasValue)
                        {
                            <span><i class="fas fa-ruler-combined"></i> @room.SizeInSqFt sq ft</span>
                        }
                        @if (!string.IsNullOrEmpty(room.BedConfiguration))
                        {
                            <span><i class="fas fa-bed"></i> @room.BedConfiguration</span>
                        }
                    </div>

                    <div class="room-actions">
                        <a href="@Url.Action("CheckAvailability", "Guest", new { roomCategoryId = room.RoomTypeId })"
                           class="btn btn-primary">
                            Book Now
                        </a>
                        <button class="btn btn-outline-secondary view-details"
                                data-roomid="@room.RoomTypeId">
                            View Details
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Room Details Modal -->
<div class="modal fade" id="roomDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roomModalLabel">Room Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded via AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary" id="modalBookNow">Book Now</a>
            </div>
        </div>
    </div>
</div>

<!-- Room Details Modal -->
<div class="modal fade" id="roomDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roomModalLabel">Room Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded via AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary" id="modalBookNow">Book Now</a>
            </div>
        </div>
    </div>
</div>


<style>
    /* Rooms Container */
    .rooms-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Hero Section */
    .rooms-hero {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/lobby.jpg');
        background-size: cover;
        background-position: center;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        margin-bottom: 50px;
        border-radius: 10px;
    }

    .hero-content h1 {
        font-size: 3.5rem;
        margin-bottom: 15px;
        font-weight: 700;
    }

    .hero-content p {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto;
    }

    /* Room Filter */
    .room-filter {
        margin-bottom: 40px;
    }

    .filter-container {
        display: flex;
        gap: 10px;
        overflow-x: auto;
        padding-bottom: 10px;
    }

    .filter-option {
        padding: 8px 20px;
        background: #f5f5f5;
        border-radius: 20px;
        cursor: pointer;
        white-space: nowrap;
        transition: all 0.3s ease;
    }

        .filter-option:hover {
            background: #e0e0e0;
        }

        .filter-option.active {
            background: #2c3e50;
            color: white;
        }

    /* Rooms Grid */
    .rooms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 30px;
        margin-bottom: 60px;
    }

    .room-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .room-image {
        position: relative;
        height: 250px;
        overflow: hidden;
    }

        .room-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .room-card:hover .room-image img {
        transform: scale(1.05);
    }

    .room-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(212, 175, 55, 0.9);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 600;
    }

    .room-type-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: rgba(44, 62, 80, 0.9);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
    }

    .room-content {
        padding: 25px;
    }

        .room-content h3 {
            margin-bottom: 10px;
            font-size: 1.5rem;
            color: #2c3e50;
        }

    .room-price {
        font-size: 1.8rem;
        font-weight: 700;
        color: #d4af37;
        margin-bottom: 15px;
    }

        .room-price span {
            font-size: 1rem;
            color: #777;
            font-weight: 400;
        }

    .room-description {
        color: #555;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .room-features h4 {
        font-size: 1.1rem;
        margin-bottom: 10px;
        color: #2c3e50;
    }

    .room-features ul {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-bottom: 20px;
    }

    .room-features li {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #555;
    }

    .room-features .more-features {
        color: #2c3e50;
        font-weight: 600;
    }

    .room-meta {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
        color: #555;
    }

        .room-meta span {
            display: flex;
            align-items: center;
            gap: 5px;
        }

    .room-actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    /* Modal Styles */
    .modal-body .room-details-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    .modal-body .room-details-image {
        height: 300px;
        border-radius: 8px;
        overflow: hidden;
    }

        .modal-body .room-details-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .modal-body .room-details-info h4 {
        margin-top: 20px;
        color: #2c3e50;
    }

    .modal-body .room-details-features {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-top: 15px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .rooms-grid {
            grid-template-columns: 1fr;
        }

        .rooms-hero {
            height: 300px;
        }

            .rooms-hero h1 {
                font-size: 2.5rem;
            }

        .filter-container {
            flex-wrap: wrap;
        }

        .modal-body .room-details-content {
            grid-template-columns: 1fr;
        }
    }
</style>

@section Scripts {
    <script>
        // Room filtering functionality
        $(document).ready(function() {
            $('.filter-option').click(function() {
                $('.filter-option').removeClass('active');
                $(this).addClass('active');

                const filter = $(this).data('filter');
                if (filter === 'all') {
                    $('.room-card').show();
                } else {
                    $('.room-card').hide();
                    $(`.room-card[data-category="${filter}"]`).show();
                }
            });

            // Room details modal
            $('.view-details').click(function() {
                const roomId = $(this).data('roomid');

                $.get(`/Guest/RoomDetails/${roomId}`, function(data) {
                    $('#roomDetailsModal .modal-body').html(data);
                    $('#modalBookNow').attr('href', `/Guest/CheckAvailability?roomCategoryId=${roomId}`);
                    $('#roomDetailsModal').modal('show');
                });
            });
        });
    </script>
}