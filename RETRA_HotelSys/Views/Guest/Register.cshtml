@model RETRA_HotelSys.Models.GuestRegistrationViewModel

@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
    ViewData["Title"] = "Registration";
}

<div class="registration-container">
    <div class="registration-header">
        <img src="~/images/7.png" alt="Hotel Logo" class="registration-logo">
        <p></p>
        <h2>Create Your Account</h2>
        <p>Join Hotel RETRA for exclusive benefits</p>
    </div>


    <form asp-action="Register" method="post" class="registration-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="two-column-form">
            <!-- Left Column -->
            <div class="form-column">
                <div class="form-group-modern">
                    <label asp-for="FirstName" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="FirstName" class="form-control-modern" placeholder="First name" />
                    </div>
                    <span asp-validation-for="FirstName" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="LastName" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="LastName" class="form-control-modern" placeholder="Last name" />
                    </div>
                    <span asp-validation-for="LastName" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" class="form-control-modern" placeholder="Email address" />
                    </div>
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control-modern" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="ConfirmPassword" type="password" class="form-control-modern" placeholder="Confirm password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="form-column">
                <div class="form-group-modern">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-phone input-icon"></i>
                        <input asp-for="PhoneNumber" class="form-control-modern" placeholder="Phone number" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-calendar-alt input-icon"></i>
                        <input asp-for="DateOfBirth" type="date" class="form-control-modern" />
                    </div>
                    <span asp-validation-for="DateOfBirth" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Address" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-map-marker-alt input-icon"></i>
                        <input asp-for="Address" class="form-control-modern" placeholder="Street address" />
                    </div>
                    <span asp-validation-for="Address" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="IDType" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-id-card input-icon"></i>
                        <select asp-for="IDType" class="form-control-modern">
                            <option value="">Select ID Type</option>
                            <option value="Passport">Passport</option>
                            <option value="Driver License">Driver License</option>
                            <option value="National ID">National ID</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <span asp-validation-for="IDType" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="IDNumber" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-id-badge input-icon"></i>
                        <input asp-for="IDNumber" class="form-control-modern" placeholder="ID number" />
                    </div>
                    <span asp-validation-for="IDNumber" class="validation-message"></span>
                </div>
            </div>
        </div>

        <div class="location-fields">
            <div class="form-row">
                <div class="form-group-modern">
                    <label asp-for="City" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-city input-icon"></i>
                        <input asp-for="City" class="form-control-modern" placeholder="City" />
                    </div>
                    <span asp-validation-for="City" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="StateProvince" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-map-pin input-icon"></i>
                        <input asp-for="StateProvince" class="form-control-modern" placeholder="State/Province" />
                    </div>
                    <span asp-validation-for="StateProvince" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Country" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-globe input-icon"></i>
                        <input asp-for="Country" class="form-control-modern" placeholder="Country" />
                    </div>
                    <span asp-validation-for="Country" class="validation-message"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="PostalCode" class="form-label"></label>
                    <div class="input-container">
                        <i class="fas fa-mail-bulk input-icon"></i>
                        <input asp-for="PostalCode" class="form-control-modern" placeholder="Postal code" />
                    </div>
                    <span asp-validation-for="PostalCode" class="validation-message"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn-register">
            <i class="fas fa-user-plus"></i> Create Account
        </button>
    </form>

    <div class="registration-footer">
        <p>Already have an account? <a asp-controller="Guest" asp-action="Login" class="login-link">Sign in here</a></p>
    </div>
</div>
