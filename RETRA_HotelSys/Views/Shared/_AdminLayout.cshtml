<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RETRA Hotel Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <div class="admin-sidebar">
            <div class="sidebar-header">
                <img src="~/images/logo-white.png" alt="RETRA Hotel Logo" class="sidebar-logo">
                <p class="sidebar-subtitle">Administration Panel</p>
            </div>
            <ul class="sidebar-nav">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Staff" ? "active" : "")">
                    <a asp-controller="Staff" asp-action="Index">
                        <i class="fas fa-users-cog"></i> Staff Management
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Rooms" ? "active" : "")">
                    <a asp-controller="Rooms" asp-action="Index">
                        <i class="fas fa-bed"></i> Room Management
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Reservations" ? "active" : "")">
                    <a asp-controller="Reservations" asp-action="Index">
                        <i class="fas fa-calendar-check"></i> Reservations
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Maintenance" ? "active" : "")">
                    <a asp-controller="Maintenance" asp-action="Index">
                        <i class="fas fa-tools"></i> Maintenance
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Reports" ? "active" : "")">
                    <a asp-controller="Reports" asp-action="Index">
                        <i class="fas fa-chart-bar"></i> Reports
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active" : "")">
                    <a asp-controller="Settings" asp-action="Index">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <div class="user-profile">
                    <div class="user-avatar">
                        @User.Identity.Name?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="user-info">
                        <div class="user-name">@User.Identity?.Name</div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link btn-logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
